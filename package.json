{
  "name": "@jpex/webpack-loader",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jpex-js/webpack-loader.git"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,ts}": [
        "eslint -c ./.eslintrc.js",
        "git add"
      ]
    }
  },
  "author": "Jack Ellis <jack.ellis@godaddy.com>",
  "license": "MIT",
  "scripts": {
    "test": "yarn build && BABEL_DISABLE_CACHE=1 ava",
    "test:debug": "ava debug",
    "coverage": "nyc ava",
    "lint": "eslint './src/**/*.ts' && tsc --noEmit",
    "build:prepare": "rm -rf dist",
    "build:js": "rollup --config ./rollup.config.js",
    "build": "yarn build:prepare && yarn build:js",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@commitlint/config-conventional": "^9.1.2",
    "@team-griffin/eslint-config": "^3.3.0",
    "@types/babel__core": "^7.1.9",
    "@types/loader-utils": "^2.0.1",
    "@types/node": "^14.6.2",
    "@types/webpack": "^4.41.21",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "ava": "^3.12.1",
    "awesome-typescript-loader": "^5.2.1",
    "eslint": "^7.7.0",
    "jpex": "^4.0.0",
    "memfs": "^3.2.0",
    "rollup": "^2.26.8",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^17.1.1",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1"
  },
  "dependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-syntax-typescript": "^7.10.4",
    "@jpex-js/babel-plugin": "^1.0.0",
    "loader-utils": "^2.0.0"
  }
}
